<div class="registro d-flex flex-column mt-5 mb-5">
    <div class="registro-contenido d-flex container row">
        <div class="registro-formulario col-md-3">
            <h3 class="titulo"> Registrate Aquí</h3>
            <form action="/users/signup" method="POST">
                <div class="formulario-contenido">
                    <div class="form-group body-nombre">
                        <label>Nombre</label>
                        <input class="body-input-nombre form-control mt-1 " type="text" name="nombre"
                            placeholder="Ingresa tu nombre" value="{{nombre}}">
                    </div>

                    <div class="form-group mt-3 body-apellido">
                        <label>Apellido</label>
                        <input class="body-input-apellido form-control mt-1 " type="text" name="apellido"
                            placeholder="Ingresa tu apellido" value="{{apellido}}">
                    </div>

                    <div class="form-group mt-3 body-dni">
                        <label>DNI</label>
                        <input class="body-input-dni form-control mt-1 " type="text" name="dni"
                            placeholder="Ingresa tu DNI" value="{{dni}}">
                    </div>

                    <div class="form-group mt-3 body-email">
                        <label>Correo</label>
                        <input class="body-input-email form-control mt-1 " type="email" name="correo"
                            placeholder="Ingresa un correo valido" value="{{correo}}">
                    </div>

                    <div class="form-group mt-3 body-contraseña">
                        <label>Contraseña</label>
                        <input class="body-input-contraseña form-control mt-1 " type="password" name="password"
                            placeholder="Ingresa una contraseña" value="{{password}}">
                    </div>

                    <div class="form-group mt-3 body-contraseña">
                        <label>Confirmar Contraseña</label>
                        <input class="body-input-contraseña form-control mt-1 " type="password"
                            name="confirmar_password" placeholder="Confirmar contraseña" value="{{confirmar_password}}">
                    </div>
                </div>

                <div class="form-group formulario-btn justify-content-center align-items-center">
                    <button class="btn btn-primary w-100">Registrarme</button>
                    <p class="mt-2">¿Ya tienes cuenta? <a href="/users/signin"><strong>Inicia Sesion</strong></a></p>
                </div>
            </form>
        </div>

        <div class="registro-descripcion col-md-3">
            <h3 class="titulo">Beneficios de tener una cuenta</h3>
            <div class="registro-descripcion-contenido">
                <ul>
                    <li>
                        <i class="fas fa-shopping-cart fa-2x"></i>
                        <span class="mx-2">Seguimiento de tus compras</span>
                    </li>
                    <li class="mt-5">
                        <i class="fas fa-bell fa-2x"></i>
                        <span class="mx-2">Notificaciones de compra realizada</span>
                    </li>
                    <li class="mt-5">
                        <i class="fas fa-sync-alt fa-2x"></i>
                        <span class="mx-2">Actualizar tus datos y direcciones</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>