<header>
    <section class="header-principal d-flex flex-column">
        <nav class="navbar navbar-expand-lg ">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                    <div class="d-flex align-items-center">
                        <a class="navbar-brand" href="/principal">
                            <i class="fas fa-trademark fa-2x"></i>
                        </a>
                        <ul class="navbar-nav">
                            {{#if user}}
                            {{#ifCond user.rol '===' 'admin'}}
                            <li class="nav-item">
                                <a class="nav-link" href="/product/all-products">Administrar Productos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/users/all-adm-users">Administrar Usuarios</a>
                            </li>
                            {{else}}
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page"
                                    href="/product/all-products-client">Productos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#nosotros">Nosotros</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#contacto">Contacto</a>
                            </li>
                            {{/ifCond}}
                            {{else}}
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page"
                                    href="/product/all-products-client">Productos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#nosotros">Nosotros</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#contacto">Contacto</a>
                            </li>
                            {{/if}}
                        </ul>
                    </div>

                    <!-- Parte 2: Barra de búsqueda grande -->
                    <div class="flex-grow-1 mx-3">
                        <div class="p-5">
                            <form action="/product/search" method="GET" class="d-flex" role="search">
                                <input type="text" name="query" class="form-control" placeholder="Buscar productos">
                                <button class="btn btn-outline" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </form>
                        </div>
                    </div>

                    <!-- Parte 3: Login -->
                    <ul class="header-acciones">
                        <!-- condicionales-->
                        {{#if user}}
                        <li class="header-inicioSesion dropdown mx-3">
                            <div class="texto">
                                <i class="far fa-user fa-2x"></i>
                                <div>
                                    <strong>
                                        ¡Hola!
                                    </strong>
                                </div>
                            </div>
                            <a class="etiqueta dropdown-toggle d-flex" href="#" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                {{user.nombre}}
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/users/info-user">Mi cuenta</a></li>
                                <li><a class="dropdown-item" href="/users/logout">Cerrar Sesion</a></li>
                            </ul>
                        </li>
                        {{else}}
                        <li class="header-inicioSesion dropdown mx-3">
                            <div class="imagen-izquierda">
                                <i class="far fa-user fa-2x"></i>
                            </div>
                            <div class="contenido-derecha">
                                <div>
                                    <strong>
                                        ¡Hola!
                                    </strong>
                                </div>
                                <a class="etiqueta dropdown-toggle d-flex" href="#" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    Inicia Sesión
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="/users/signin">Inicia Sesión</a></li>
                                    <li><a class="dropdown-item" href="/users/signup">Regístrate</a></li>
                                </ul>
                            </div>
                        </li>
                        {{/if}}
                        <!-- fin condicional-->
                        <li class="header-carrito mx-3">
                            <a href="shop/products-list">
                                <i class="fas fa-shopping-cart fa-2x"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            </div>
        </nav>
    </section>
</header>